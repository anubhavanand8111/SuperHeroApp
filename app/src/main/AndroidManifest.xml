<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.anubhav.superheroapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SuperHeroApp">
        <activity android:name=".ui.view.FavoriteHeroActivity"
            android:label="Favorite Super Heroes"/>
        <activity android:name=".ui.view.FilteredActivity"
            android:label="Filtered Super Heroes"/>
        <activity android:name=".ui.view.AllSuperHeroActivity"
            android:label="All Super Heroes"/>
        <activity android:name=".ui.view.SuperHeroDetailActivity"
            android:label="Super Hero" />
        <activity android:name=".ui.view.SearchActivity" />
        <activity
            android:name=".ui.view.MainActivity"
            android:theme="@style/Theme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>