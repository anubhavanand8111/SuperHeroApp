<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.FilterFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:id="@+id/btmSheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"

            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="14dp"
                    android:layout_height="2dp"
                    android:id="@+id/viewLine"
                    android:background="#777"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_below="@+id/viewLine"
                    android:id="@+id/llGender"
                    android:layout_marginTop="24dp"

                    android:padding="8dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Gender"

                        android:layout_height="match_parent"/>
                    <Spinner
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:id="@+id/genderSpinner"

                        android:layout_weight="1"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_below="@+id/llGender"
                    android:id="@+id/llAlignment"
                    android:layout_marginTop="24dp"

                    android:padding="8dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Alignment"

                        android:layout_height="match_parent"/>
                    <Spinner
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown"
                        android:id="@+id/alignmentSpinner"

                        android:layout_weight="1"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_below="@+id/llAlignment"
                    android:id="@+id/llPublisher"
                    android:layout_marginTop="24dp"

                    android:padding="8dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Publisher"

                        android:layout_height="match_parent"/>
                    <Spinner
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown"
                        android:id="@+id/publisherSpinner"

                        android:layout_weight="1"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_below="@+id/llPublisher"
                    android:id="@+id/sortBy"
                    android:layout_marginTop="24dp"

                    android:padding="8dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Sort By"

                        android:layout_height="match_parent"/>
                    <Spinner
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/sortBySpinner"
                        android:layout_weight="1"
                        android:spinnerMode="dropdown"/>

                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="14dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginBottom="14dp"
                    android:background="@drawable/btn_bg"
                    android:text="Filter"
                    android:id="@+id/filterBtn"
                    android:layout_below="@id/sortBy"/>

            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>